<h1>hello! please log in</h1>

<form method="POST" action="/auth/login">
  <label>Name:</label>
  <input type="text" name="name" placeholder="your username" required="true" />
  <label>Password</label>
  <input
    type="password"
    name="password"
    placeholder="*********"
    required="true"
  />
  <button type="submit">Log in!</button>

  <a href="/auth/signup">Not registered yet? Sign up!</a>
  {{#if error}}
    <p style="color: red">{{error}}</p>
  {{/if}}
</form>